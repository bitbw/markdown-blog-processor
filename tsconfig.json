{
  "compilerOptions": {
    "skipLibCheck": true, // 跳过类型检查 不然会报 Duplicate identifier 'Promise'.
    "noImplicitReturns": false, // 检查函数是否有返回值 false 不然报：并非所有代码路径都返回值。
    "allowSyntheticDefaultImports": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedParameters": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "noImplicitAny": true,
    "declarationDir": "dist/types",
    "declaration": true, // 从项目中的 TypeScript 和 JavaScript 文件生成 .d.ts 文件。
    "target": "esnext",
    "module": "esnext",
    "strict": true
  },
  "include": [
    "src/**/*"
, "__test/blog"  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}